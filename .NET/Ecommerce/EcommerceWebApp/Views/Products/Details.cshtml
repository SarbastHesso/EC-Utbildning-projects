@model EcommerceWebApp.Models.Product

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <button class="mt-3 btn">
        <a asp-action="Index" class="text-secondary">Back to List</a>
    </button>
    <h3 class="mt-3 text-center">Product id: @Html.DisplayFor(model => model.Id)</h3>
    <div class="card mt-5 p-5 shadow">
        <div class="row g-0 align-items-center">
            <div class="col-md-4">
                <img src="@Html.DisplayFor(model => model.ImageUrl)" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body p-5">
                    <h2 class="card-title">@Html.DisplayFor(model => model.Name)</h2>
                    <p class="card-text h5 mt-3 mb-5">@Html.DisplayFor(model => model.Description)</p>
                    <p class="card-text h2 text-danger text-right mr-5">@Html.DisplayFor(model => model.Price):-</p>
                </div>
            </div>
        </div>
    </div>
</div>

